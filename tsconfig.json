{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",

    "baseUrl": "./",
    "paths": { "@/*": ["src/*"] },
      
    "strict": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,

    "inlineSources": true,
    "sourceMap": true,

    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,

    "newLine": "lf",

    "noEmitOnError": true
  },
}